{
  "name": "Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node",
  "postCreateCommand": "git clone https://github.com/calcom/cal.com && cd ./cal.com/apps/ && git clone https://github.com/calcom/website",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Prisma.prisma",
        "vscodevim.vim",
        "rangav.vscode-thunder-client",
        "bradlc.vscode-tailwindcss",
        "wix.vscode-import-cost",
        "eamodio.gitlens"
      ]
    }
  },
  "forwardPorts": [
    3000,
    5432
  ]
}
